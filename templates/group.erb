
group <%= @group %> {
<% @hosts.each do |i| -%>
      host <%= i %>;
<% end -%>

<% unless @ssl -%>
      nossl;
<% end -%>
      key <%= @key_path %>;
<% @blocks.each do |b,v| %>
<% if v['includes'] -%>
<% v['includes'].each do |i| -%>
      include <%= i %>;
<% end -%>
<% end -%>
<% if v['excludes'] -%>
<% v['excludes'].each do |e| -%>
      exclude <%= e %>;
<% end -%>
<% end -%>
<% end -%>

      auto <%= @auto %>;
}
